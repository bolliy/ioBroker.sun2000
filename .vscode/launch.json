            "program": "node_modules/iobroker.sun2000/main.js",
            "cwd": "${workspaceFolder}/.dev-server/default",
            "stopOnEntry": true,
            "sourceMaps": true,
            "console": "internalConsole",
            "outputCapture": "std",
