    {
      "type": "node",
      "request": "launch",
      "name": "launch of Martin",
            "skipFiles": ["<node_internals>/**"],
            "args": ["--instance","0","--force","--logs","--debug"],
            "program": "${workspaceFolder}/.dev-server/default/node_modules/iobroker.sun2000/main.js",
            //"cwd": "${workspaceFolder}/.dev-server/default",
            "stopOnEntry": true,
            "sourceMaps": true,
